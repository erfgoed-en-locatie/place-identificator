{% extends "layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-md-12">

            <h1>Mijn datasets</h1>

            {%  if datasets is empty %}
                <p>Er zijn (nog) geen datasets.</p>
            {% else  %}
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Naam</th>
                        <th>Bestandsnaam</th>
                        <th>Gebruiker</th>
                        <th>Aangemaakt</th>
                        <th>Status</th>
                        <th>Opties</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for set in datasets %}
                        <tr>
                            <td>{{ set.id }}</td>
                            <td>{{ set.name }}</td>
                            <td>{{ set.original_name }}</td>
                            <td>{{ set.email }}</td>
                            <td>{{ set.created_on|date('d-m-Y') }}</td>
                            <td>
                                {% if set.status == 2 %}
                                    {% set statClass = 'label-success' %}
                                {% else %}
                                    {% set statClass = 'label-primary' %}
                                {% endif %}
                                <span class="label {{ statClass }}">{{ set.status }}</span>
                            </td>
                            <td>
                                <a href="{{ path('datasets-show', {'id': set.id }) }}" class="btn btn-xs btn-success" title="View"><i class="fa fa-search-plus"></i> </a>
                                <a href="{{ path('import-mapcsv', {'id': set.id }) }}" title="Bekijk of bewerk mapping" class="btn btn-xs btn-primary"><i class="fa fa-pencil"></i> </a>
                                <a href="{{ path('dataset-delete', {'id': set.id }) }}" title="Delete" class="btn btn-xs btn-danger delete"><i class="fa fa-trash"></i> </a>
                            </td>
                        </tr>

                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}

        </div>
    </div>

<script type="text/javascript">
    jQuery(function () {

        $('.delete').on('click', function(e) {
            if(confirm('De dataset en alle gemapte namen worden verwijderd...')){
                // The user pressed OK
            } else {
                e.preventDefault();
            }
        });

    });
</script>

{% endblock %}