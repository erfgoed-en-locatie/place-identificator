{% extends "layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-md-12">

            <h2>Datasets</h2>

            {%  if datasets is empty %}
                <p>Er zijn (nog) geen datasets.</p>
            {% else  %}
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Filename</th>
                        <th>User</th>
                        <th>Created</th>
                        <th>Status</th>
                        <th>Options</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for set in datasets %}
                        <tr>
                            <td>{{ set.id }}</td>
                            <td>{{ set.name }}</td>
                            <td>{{ set.filename }}</td>
                            <td>{{ set.user }}</td>
                            <td>{{ set.createdOn|date('d-m-Y') }}</td>
                            <td>
                                {% if set.status == 2 %}
                                    {% set statClass = 'label-success' %}
                                {% else %}
                                    {% set statClass = 'label-primary' %}
                                {% endif %}
                                <span class="label {{ statClass }}">{{ set.formattedStatus }}</span>
                            </td>
                            <td>
                                <a href="/datasets/{{ set.id }}" class="btn btn-xs btn-success" title="View"><i class="fa fa-search-plus"></i> </a>
                                {#<a href="/datasets/{{ set.id }}/edit" title="Edit" class="btn btn-xs btn-warning"><i class="fa fa-pencil"></i> </a>#}
                                <a href="/datasets/{{ set.id }}/delete" title="Delete" class="btn btn-xs btn-danger"><i class="fa fa-trash"></i> </a>
                            </td>
                        </tr>

                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}

        </div>
    </div>


{% endblock %}
